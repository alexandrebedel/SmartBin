generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Trash {
  id        Int       @id @default(autoincrement())
  binId     String    @db.VarChar(255)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  trashType TrashType
  image     String?
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

enum TrashType {
  recyclable
  trash
  glass
}
